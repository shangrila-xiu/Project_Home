
uni-card{
		margin: 10rpx;
		display: block;
		height: 280rpx;
		width: widthFix;
		background: -webkit-gradient(linear, left top, right top, from(#F5F5F5) , color-stop(#fcfcfc),to(#F5F5F5) );
		background: -webkit-linear-gradient(left, #F5F5F5 , #fcfcfc,#F5F5F5 );
		background: -o-linear-gradient(left, #F5F5F5 , #fcfcfc,#F5F5F5 );
		background: linear-gradient(to right, #F5F5F5 , #fcfcfc,#F5F5F5 ); /* 标准的语法 */
}
uni-card .title{
		position: absolute;
		top: 10%;
		left: 20%;
		/* letter-spacing: 10upx; */
		font-size: 28rpx;
		font-weight: 900;
}
uni-card .describe{
		position: absolute;
		top: 15%;
		left: 5%;
}
uni-card image{
		float: right;
		margin-top: 30rpx;
		margin-right: 30rpx;
		width: 200rpx;
		height: 200rpx;
}

