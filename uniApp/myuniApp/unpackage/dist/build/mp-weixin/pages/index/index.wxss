
uni-card{
		margin: 10rpx;
		display: block;
		height: 280rpx;
		width: widthFix;
		background: -webkit-gradient(linear, left top, right top, from(#F5F5F5) , color-stop(#fcfcfc),to(#F5F5F5) );
		background: -webkit-linear-gradient(left, #F5F5F5 , #fcfcfc,#F5F5F5 );
		background: -o-linear-gradient(left, #F5F5F5 , #fcfcfc,#F5F5F5 );
		background: linear-gradient(to right, #F5F5F5 , #fcfcfc,#F5F5F5 ); /* 标准的语法 */
}
